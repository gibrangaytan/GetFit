<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.cs4390.getfit.Profiles" >

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:contentDescription="profile image"
        android:src="@drawable/getfit" />

    <Button
        android:id="@+id/editbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30sp"
        android:onClick="onClickEdit"
        android:text="Edit Profile" />

    <TextView
        android:id="@+id/profileNameTextView"
        style="@style/TextStyle"
        android:gravity="center"
        android:text="Miguel"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="178dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ageTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Age:22" />

            <TextView
                android:id="@+id/weightTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Weight: 170" />

            <TextView
                android:id="@+id/heightTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Height: 6&apos;1&quot;" />

            <TextView
                android:id="@+id/waistTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Waist: 1&quot;" />

            <TextView
                android:id="@+id/chestTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="chest: 1&quot;" />

            <TextView
                android:id="@+id/armsTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Arms: 1&quot;" />

            <TextView
                android:id="@+id/forearmsTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Forearms: 1&quot;" />

            <TextView
                android:id="@+id/shouldersTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Shoulders: 1&quot;" />

            <TextView
                android:id="@+id/hipsTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="hips: 1&quot;" />

            <TextView
                android:id="@+id/thighsTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Thighs: 1&quot;" />

            <TextView
                android:id="@+id/calvesTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="calves: 1&quot;" />

            <TextView
                android:id="@+id/neckTextView"
                style="@style/TextStyle"
                android:gravity="center"
                android:text="Neck: 1&quot;" />

            <TextView
                android:id="@+id/bodyfatTextView"
                style="@style/TextStyle"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:text="BodyFat: 11%" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/routines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:onClick="onClickRoutines"
        android:text="Routines" />

</LinearLayout>