<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.cs4390.getfit.Profiles" >"

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:contentDescription="profile image"
        android:src="@drawable/getfit"
        android:layout_marginBottom="10sp"/>
    
    <Button 
	    android:id="@+id/editbutton"
	    android:text="Edit Profile"
	    android:layout_gravity="right"
	    android:layout_marginRight="30sp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:onClick="onClickEdit"/>

	<TextView
	    android:id="@+id/profileNameTextView"
	    style="@style/TextStyle"
	    android:gravity="center"
	    android:text="Miguel"
	    android:textSize="25sp"
	    android:textStyle="bold" />

	<TextView
	    android:id="@+id/ageTextView"
	    style="@style/TextStyle"
	    android:gravity="center"
	    android:text="Age:22" />

	<TextView
	    android:id="@+id/weightTextView"
	    style="@style/TextStyle"
	    android:gravity="center"
	    android:text="Weight: 170" />
	<TextView
	    android:id="@+id/heightTextView"
	    style="@style/TextStyle"
	    android:gravity="center"
	    android:text="Height: 6'1&quot;" />
	<TextView
	    android:id="@+id/bodyfatTextView"
	    style="@style/TextStyle"
	    android:gravity="center" 
	    android:text="BodyFat: 11%"
	    android:layout_marginBottom="20sp" /> 

	<Button 
	    android:id="@+id/routines"
	    android:text="Routines"
	    android:gravity="center"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:onClick="onClickRoutines"
	    android:layout_gravity="center"
	    />
</LinearLayout>
